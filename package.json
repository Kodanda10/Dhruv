{
  "name": "dhruv-dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Project Dhruv dashboard (Next.js, TypeScript, Tailwind, TDD)",
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:axe": "vitest run -t axe",
    "test:cov": "vitest run --coverage",
    "test:perf": "node ./scripts/run-k6.js",
    "e2e:smoke": "playwright test -c playwright.config.ts",
    "test:ui": "playwright test tests/ui/",
    "test:theme": "jest tests/themeConsistency.test.ts",
    "test:accessibility": "playwright test tests/accessibility.spec.ts",
    "test:responsive": "playwright test tests/ui/themeAndResponsive.spec.ts",
    "test:load": "k6 run tests/load.k6.js",
    "test:performance": "bash scripts/test-performance.sh",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path=reports/lighthouse.html --chrome-flags=\"--headless\"",
    "test:all": "npm run test:theme && npm run test:ui",
    "ci:monitor": "./scripts/ci-monitor.sh",
    "ci:status": "./scripts/ci-status-table.sh",
    "deploy": "vercel --prod",
    "project:deployed": "node scripts/update-project-board.js",
    "ops:commandview": "node scripts/ops/commandview-metrics.js",
    "ops:pipeline-health": "node scripts/ops/pipeline-health.js",
    "ops:watchdog": "node scripts/ops/parser-watchdog.js",
    "ops:parse-all-pending": "node scripts/ops/parse-all-pending-tweets.cjs",
    "ops:run-full-pipeline": "bash scripts/ops/run-full-pipeline.sh",
    "ops:monitor": "node scripts/ops/pipeline-monitor.js",
    "ops:fix-all": "bash scripts/ops/fix-all-issues.sh",
    "db:count-tweets": "node -e \"import('./scripts/ops/db-helpers.js').then(({getTweetCount}) => getTweetCount().then(c => console.log('Total tweets:', c)).then(() => process.exit(0)));\"",
    "db:safety-check": "node scripts/ops/db-safety-check.js",
    "ops:backfill-correction": "node scripts/ops/backfill-correction.js",
    "ops:monitoring-dashboard": "curl -s http://localhost:3000/api/monitoring/dashboard | jq .",
    "project:move": "node scripts/move-to-deployed.js",
    "labs:faiss:build": "python3 api/scripts/rebuild_geography_embeddings_multilingual.py",
    "labs:faiss:verify": "tsx src/labs/faiss/verify.ts",
    "labs:test:e2e": "playwright test tests/labs/e2e/",
    "labs:test:load": "k6 run perf/labs-api.k6.js",
    "labs:lighthouse": "lighthouse http://localhost:3000/labs/search --output html --output-path=reports/labs-lighthouse.html --chrome-flags=\"--headless\" && lighthouse http://localhost:3000/labs/ai --output html --output-path=reports/labs-ai-lighthouse.html --chrome-flags=\"--headless\" && lighthouse http://localhost:3000/labs/maps --output html --output-path=reports/labs-maps-lighthouse.html --chrome-flags=\"--headless\" && lighthouse http://localhost:3000/labs/mindmap --output html --output-path=reports/labs-mindmap-lighthouse.html --chrome-flags=\"--headless\" && lighthouse http://localhost:3000/labs/learning --output html --output-path=reports/labs-learning-lighthouse.html --chrome-flags=\"--headless\""
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "@google/generative-ai": "^0.24.1",
    "@tanstack/react-table": "^8.21.3",
    "@types/d3": "^7.4.3",
    "@types/pdfkit": "^0.17.3",
    "@upstash/redis": "^1.28.4",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.24",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.546.0",
    "next": "^14.2.32",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1",
    "task-master": "^2.3.0",
    "task-master-ai": "^0.26.0",
    "taskmaster": "^0.0.3",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.47.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-image-snapshot": "^6.5.1",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.1.0",
    "mapbox-gl": "^3.16.0",
    "msw": "^2.12.1",
    "nodemailer": "^6.10.1",
    "pa11y": "^9.0.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "puppeteer": "^22.15.0",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
