{
  "name": "project-dhruv",
  "version": "0.1.0",
  "private": true,
  "description": "Project Dhruv dashboard (Next.js, TypeScript, Tailwind, TDD)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
