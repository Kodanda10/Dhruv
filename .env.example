# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Twitter API (X) Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_BEARER_TOKEN=your_bearer_token_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Gemini API (for text parsing)
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=postgresql://dhruv_user:dhruv_pass@localhost:5432/dhruv_db

# MapMyIndia (for geocoding)
MAPMYINDIA_CLIENT_ID=your_mapmyindia_client_id_here
MAPMYINDIA_CLIENT_SECRET=your_mapmyindia_client_secret_here

# Vector search (FAISS / Milvus)
FAISS_INDEX_PATH=./data/embeddings/multilingual_geography/faiss_index.bin
FAISS_LOCATIONS_PATH=./data/embeddings/multilingual_geography/locations.json
FAISS_DIM=384
FAISS_METRIC=cosine
FAISS_EMBEDDING_MODEL=intfloat/multilingual-e5-base

MILVUS_ENABLE=false
MILVUS_URI=http://localhost:19530
MILVUS_COLLECTION_NAME=chhattisgarh_geography_multilingual

# Mapbox (labs maps)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Dynamic learning / Python helpers
LEARNING_ENABLE=true
LEARNING_LOG_DIR=./logs/learning
PYTHON_PATH=python3

# Feature Flags
FLAG_PARSE=on
NEXT_PUBLIC_FLAG_PARSE=on
ENABLE_TWITTER_FETCH=true
ENABLE_PARSING=true
ENABLE_REVIEW_UI=true
ENABLE_ANALYTICS=true
